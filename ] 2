char	*envoi(char *stock, char **line)
{
	char	*str;
	char	*str2;
	int i;
	int j;

	i = charisfind(stock, '\n') ;
	j = ft_strlen(stock) - i;
	if (!(str = malloc(sizeof(char) * i + 1)))
		return (NULL);
	if (!(str2 = malloc(sizeof(char) * j + 1)))
		return (NULL);
	i = 0;
	j = 0;
	while (stock[i] != '\n')
	{
		str[j++] = stock[i++];
	str[j] = '\0';
	i++;
	j = 0;
	while (stock[i])
		str2[j++] = stock[i++];
	str2[j] = '\0';
	*line = str;
	free(stock);
	return (str2);

}
